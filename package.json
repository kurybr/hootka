{
  "name": "karoot-quiz-tempo-real",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "tsx server.ts",
    "build": "next build",
    "build:server": "tsc -p tsconfig.server.json",
    "build:all": "npm run build && npm run build:server",
    "start": "NODE_ENV=production tsx server.ts",
    "lint": "next lint",
    "test:load:setup": "node load-tests/seed-quiz.js",
    "test:load:small": "node load-tests/run-with-seed.js join-and-play-small",
    "test:load:medium": "node load-tests/run-with-seed.js join-and-play-medium",
    "test:load:large": "node load-tests/run-with-seed.js join-and-play-large",
    "test:load:stress": "node load-tests/run-with-seed.js join-and-play-stress",
    "test:load:A10": "node load-tests/run-with-seed.js A-mass-connection-10",
    "test:load:A50": "node load-tests/run-with-seed.js A-mass-connection-50",
    "test:load:A100": "node load-tests/run-with-seed.js A-mass-connection-100",
    "test:load:A200": "node load-tests/run-with-seed.js A-mass-connection-200",
    "test:load:A500": "node load-tests/run-with-seed.js A-mass-connection-500",
    "test:load:B": "node load-tests/run-burst.js B-burst-response",
    "test:load:C": "node load-tests/run-burst.js C-full-game",
    "test:load:D5": "artillery run load-tests/scenarios/D-multiple-rooms.yml",
    "test:load:D10": "artillery run load-tests/scenarios/D-multiple-rooms-10.yml",
    "test:load:E": "node load-tests/run-with-seed.js E-disconnect-reconnect",
    "test:load:monitor": "node load-tests/monitor.js 1000",
    "test:load:run-all": "bash load-tests/run-all.sh",
    "test:load:analyze": "node load-tests/analyze.js",
    "docker:build": "docker build -t karoot-quiz:latest .",
    "docker:run": "docker run --rm -p 3000:3000 karoot-quiz:latest"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.4",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-toast": "^1.2.4",
    "canvas-confetti": "^1.9.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.34.2",
    "lucide-react": "^0.468.0",
    "next": "^15.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "socket.io": "^4.8.3",
    "socket.io-client": "^4.8.3",
    "tailwind-merge": "^2.6.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.0.0",
    "@types/canvas-confetti": "^1.9.0",
    "@types/node": "^22.10.2",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.2",
    "artillery": "^2.0.30",
    "artillery-engine-socketio-v3": "^1.2.0",
    "eslint": "^9.17.0",
    "eslint-config-next": "^15.1.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.16",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2"
  }
}
